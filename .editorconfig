# https://editorconfig.org/
root = true

[*]
indent_style = tab
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2
tab_width = 2

[Dockerfile]
indent_style = space
indent_size = 2
tab_width = 2

[*.sh]
indent_style = space
